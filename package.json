{
  "name": "react-mops",
  "version": "0.1.0",
  "private": true,
  "description": "OS X UI elements for React.js",
  "repository": "git@github.com:dekk-app/react-mops.git",
  "license": "MIT",
  "author": "Gregor Adams <greg@pixelass.com>",
  "main": "index.js",
  "scripts": {
    "dev": "lerna run dev --parallel",
    "build": "lerna run build --stream",
    "ncu": "ncu - u; lerna exec 'ncu -u'",
    "prerelease": "lerna run build --scope react-mops",
    "release": "lerna publish --conventional-commits",
    "release:beta": "yarn prerelease && lerna publish --dist-tag prerelease --preid beta",
    "release:rc": "yarn prerelease && lerna publish --dist-tag prerelease --preid rc",
    "test": "echo 'No tests specified' exit 0"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "concurrently": "4.1.2",
    "lerna": "3.16.4",
    "npm-check-updates": "3.1.23",
    "prettier": "1.18.2",
    "sort-package-json": "1.22.1"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "renovate": {
    "automerge": true,
    "major": {
      "automerge": false
    }
  }
}
